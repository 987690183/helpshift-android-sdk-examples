<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/hs__listPreferredItemPaddingTop">

  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/activity_horizontal_margin_medium"
      android:layout_marginStart="@dimen/activity_horizontal_margin_medium"
      android:layout_weight="4"
      android:gravity="start"
      android:orientation="vertical">

    <LinearLayout
        android:id="@+id/review_accepted_message_container"
        style="@style/Helpshift.Style.AdminTextMessageContainer">

      <com.helpshift.views.HSTextView
          android:id="@+id/review_accepted_message"
          style="@style/Helpshift.Style.AdminTextMessage"/>
    </LinearLayout>

    <com.helpshift.views.HSTextView
        android:id="@+id/review_accepted_date"
        style="@style/Helpshift.Style.AdminMessageDate"/>
  </LinearLayout>

  <View
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"/>
</LinearLayout>