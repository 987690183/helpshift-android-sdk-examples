<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/hs__listPreferredItemPaddingTop">

  <View
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"/>

  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/activity_horizontal_margin_medium"
      android:layout_marginRight="@dimen/activity_horizontal_margin_medium"
      android:layout_weight="4"
      android:gravity="end"
      android:orientation="vertical">

    <LinearLayout
        android:id="@+id/user_message_container"
        style="@style/Helpshift.Style.UserTextMessageContainer">

      <com.helpshift.views.HSTextView
          android:id="@+id/user_message_text"
          android:layout_gravity="center"
          style="@style/Helpshift.Style.UserTextMessage"/>
    </LinearLayout>

    <com.helpshift.views.HSTextView
        android:id="@+id/user_date_text"
        style="@style/Helpshift.Style.UserMessageDate"/>
  </LinearLayout>
</LinearLayout>