<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hs__picker_collapsed_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:focusable="true"
    android:paddingLeft="@dimen/activity_vertical_margin_small"
    android:paddingStart="@dimen/activity_vertical_margin_small"
    android:paddingEnd="@dimen/activity_vertical_margin_small"
    android:paddingRight="@dimen/activity_vertical_margin_small"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/hs__picker_action_expand"
        android:layout_width="@dimen/hs__picker_header_icon_height"
        android:layout_height="@dimen/hs__picker_header_icon_width"
        android:padding="@dimen/hs__picker_icon_padding"
        android:scaleType="center"
        android:focusable="false"
        android:src="@drawable/hs__expand" />

    <com.helpshift.views.HSTextView
        android:id="@+id/hs__collapsed_picker_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_medium"
        android:layout_marginStart="@dimen/activity_horizontal_margin_medium"
        android:textSize="@dimen/hs__textSizeMedium"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="?android:textColorPrimary" />

</LinearLayout>
